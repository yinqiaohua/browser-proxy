#!/usr/bin/env node

var args =process.argv.slice(2);
var conf = args.join(' ');
var path = require('path');

var config = {};
var list = [];
var tmpKey = '0';
if (conf) list = conf.split(' ');

list.forEach(function(item, idx){
  var key = idx + 1;
  if (key===1) {
    config[item] = null;
  }
  if (key%2===0){
    config[tmpKey] = item;
  }else{
    tmpKey = item;
  }
});

if (config['-c']) {
  config['-c'] = path.resolve(config['-c'])
}
if (config.hasOwnProperty('-v')) {
  var json = require( '../package.json'  )
  console.log(json.version)
}else{
  var app = require('../index');
  app(config);
}
