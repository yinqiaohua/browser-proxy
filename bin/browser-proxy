#!/usr/bin/env node
'use strict';
var http           = require('http')
var colors         = require('colors')
var requestHandler = require('../modules/request-handler.js')
var connectHandler = require('../modules/connect-handler.js')
// var upgradeHandler = require('../modules/upgrade-handler.js')
var program        = require('commander')
var packageJson    = require('../package.json')
var server         = new http.Server()
var AppPort        = 8787
var URL = require('url')
var util = require('../modules/util')

program.version(packageJson.version)
    .option('-c, --config [value]', 'config file path')
    .option('-p, --port [value]', 'proxy port')
    .parse(process.argv)

AppPort = program.port || AppPort

server.listen(AppPort, () => {
    console.log(colors.green('z-proxy已启动，端口: ' + AppPort))
    server.on('error', (e) => {
        console.error(colors.red(e))
    })

    server.on('request', (req, res) => {
        // console.log(req.url)
        if (!req.__sid__) req.__sid__ = util.GUID()
        requestHandler(req, res)
    })

    // tunneling for https
    server.on('connect', (req, socket, head) => {
        if (!req.__sid__) req.__sid__ = util.GUID()
        connectHandler(req, socket, head)
    })

    server.on('upgrade', function(req, socket, head) {
        console.log(res.url)
        // upgradeHandler(req, socket, head, ssl);
    });
})


process.on('uncaughtException', function(err){
    console.error(colors.red('uncaughtException: ' + err.message))
});